<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spzx.manager.mapper.SysUserMapper">

    <sql id="columns">
        id,username Username,password,name,phone,avatar,description,status,create_time,update_time,is_deleted
    </sql>

    <!--删除用户-->
     <update id="deleteById">
         UPDATE sys_user SET is_deleted = 1 WHERE id = #{userId}
     </update>

    <!--根据用户名查询用户是否存在-->    <!--不知道为什么不用*查询-->
    <select id="selectUserInfoByUserName" resultType="com.spzx.model.entity.system.SysUser">
        SELECT <include refid="columns"/> FROM sys_user WHERE username=#{userName}
    </select>

    <sql id="findPageWhere">
        <where>
            <if test="keyword != null and keyword != ''">
                and username like CONCAT('%',#{keyword},'%')
            </if>
            <if test="createTimeBegin != null and createTimeBegin != ''">
                and create_time >= #{createTimeBegin}
            </if>
            <if test="createTimeEnd != null and createTimeEnd != ''">
                and create_time &lt;= #{createTimeEnd}
            </if>
            and is_deleted = 0
        </where>
    </sql>

    <!--查询用户列表-->
    <select id="findByPage" resultType="com.spzx.model.entity.system.SysUser" >
        select <include refid="columns" />
        from sys_user
        <include refid="findPageWhere"/>
        order by id desc
    </select>

    <!--添加用户-->
    <insert id="saveSysUser">
        insert into sys_user (
            username,
            password,
            name,
            phone,
            avatar,
            description,
            status
        ) values (
             #{userName},
             #{password},
             #{name},
             #{phone},
             #{avatar},
             #{description},
             #{status}
         )
    </insert>

    <!--新增角色关系-->
    <insert id="doAssign">

    </insert>

    <!--修改用户信息-->
    <update id="updateSysUser">
        update sys_user set
        <if test="userName != null and userName != ''">
            username = #{userName},
        </if>
        <if test="password != null and password != ''">
            password = #{password},
        </if>
        <if test="name != null and name != ''">
            name = #{name},
        </if>
        <if test="phone != null and phone != ''">
            phone = #{phone},
        </if>
        <if test="avatar != null and avatar != ''">
            avatar = #{avatar},
        </if>
        <if test="description != null and description != ''">
            description = #{description},
        </if>
        <if test="status != null and status != ''">
            status = #{status},
        </if>
        update_time =  now()
        where
        id = #{id}
    </update>
</mapper>